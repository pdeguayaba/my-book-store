<div class = 'row'>
<div class = 'col-md-6'>
  <%= image_tag @book.image.url, class: 'img-responsive' %>
</div>

<div class = 'col-md-6'>
  <h3><%= @book.name %> by <%= @book.author %></h3>
  <p><%= @book.description %></p>
  <p class = 'text-center'><strong>$<%= @book.price/100 %></strong</p>
  
  <% if current_user %>
    <%= form_tag buy_path(slug: @book.slug) do %>
      <script src = 'https://checkout.stripe.com/checkout.js' 
              class = 'stripe-button'
              data-key = '<%= Rails.configuration.stripe[:publishable_key] %>'
              data-description = '<%= @book.name %>'
              data-name = 'eBook'
              data-amount = '<%= @book.price %>'
              data-email = '<%= current_user.email %>'
              data-locale = 'auto'>
      </script>
    <% end %>
  <% else %>
    <p>Please log in to purshase this book.</p>
  <% end %>
</div>
</div>


<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
