<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
  <%= f.error_notification %>
  <h2 class = 'text-center'>Forgot your password?</h2>

    <%= f.input :email,
                required: true,
                label: false,
                placeholder: 'E-mail',
                autofocus: true,
                input_html: { autocomplete: "email" } %>

    <%= f.button :submit, 'Reset Password', class: 'btn btn-success btn-block' %>

<% end %>

<%= render "devise/shared/links" %>
